<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolorattract"
android:layout_gravity="center"
    tools:context=".NewCallGen">



    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Your Region:  Mumbai"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="139dp"

        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="292dp"
        android:layout_height="56dp"

        android:layout_above="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-95dp"
        android:layout_marginStart="57dp"

        android:background="@layout/shape"
        android:drawableLeft="@drawable/ic_action_city"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    City of service"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="284dp"
        android:layout_height="56dp"

        android:layout_alignEnd="@+id/e3"
        android:layout_below="@+id/t2"
        android:background="@layout/shape"
        android:drawableLeft="@drawable/ic_action_per"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    Name of Service engineer"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="276dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:layout_marginStart="54dp"
        android:background="@layout/shape"
        android:drawableLeft="@drawable/ic_action_cust"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    Clients Name"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:text="Enter Your Name"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e2"
        android:text="Enter Client's Name"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:id="@+id/e4"
        android:layout_width="296dp"
        android:layout_height="62dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t4"
        android:layout_marginStart="46dp"
        android:layout_marginTop="7dp"
        android:background="@layout/shape"
        android:drawableLeft="@drawable/ic_action_add"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    Clients Address"
        android:inputType="textPersonName"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e3"
        android:text="Enter address:"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e4"
        android:text="Enter Contact No:"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="293dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t5"
        android:layout_marginStart="47dp"
        android:background="@layout/shape"
        android:drawableLeft="@drawable/ic_action_contact"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    Clients Contact No"
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="15dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp"
        android:background="@layout/layout"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        android:textStyle="bold" />


</RelativeLayout>