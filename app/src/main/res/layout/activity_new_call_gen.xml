<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
android:layout_gravity="center"
    tools:context=".NewCallGen">



    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Your Region:  Mumbai"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_above="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-95dp"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    City of service"
        android:inputType="textPersonName"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t2"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    Name of Service engineer"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    Clients Name"
        android:inputType="textPersonName"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:text="Enter Your Name"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e2"
        android:text="Enter Client's Name"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <EditText
        android:id="@+id/e4"
        android:layout_width="370dp"
        android:layout_height="69dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t4"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="    Clients Address"
        android:inputType="textPersonName"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e3"
        android:text="Enter address:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e4"
        android:text="Enter Contact No:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_below="@+id/t5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="    Clients Contact No"
        android:inputType="number"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="341dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/e5"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="204dp"
        android:background="@layout/layout"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />


</RelativeLayout>