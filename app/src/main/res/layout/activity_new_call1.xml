<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#02A4FD"
    tools:context=".NewCall1">


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Enter Email-Id:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_above="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-95dp"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    Client's Email ID"
        android:inputType="textEmailAddress|textPersonName"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t2"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="   Auto-Generated"
        android:inputType="date"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t3"
        android:background="@layout/shape"
        android:ems="10"
        android:gravity="center"
        android:hint="    IN-Time"
        android:inputType="time"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:text=" Date:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e2"
        android:text="Service Engineer IN-Time"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <Spinner
        android:id="@+id/s1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t4"
        android:background="@android:drawable/btn_dropdown"
        android:drawablePadding="5dp"
        android:ems="10"
        android:entries="@array/tag_arrays1"
        android:gravity="center"
        android:prompt="@string/tag_prompt1" />



    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/e3"
        android:text="Select the Product:"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/s1"
        android:text="Product Serial No."
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="370dp"
        android:layout_height="47dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t5"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Product Serial No."
        android:inputType="number"
        android:textSize="25dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="352dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@layout/layout"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="370dp"
        android:layout_height="55dp"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/e4"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="If NA specify.(Optional)"
        android:inputType="text"
        android:textSize="17dp" />


</RelativeLayout>