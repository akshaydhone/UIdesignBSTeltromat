<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcolorattract"
    tools:context=".NewCall1">


    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-54dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Enter Email-Id:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e1"
        android:layout_width="370dp"
        android:layout_height="56dp"

        android:layout_above="@+id/t2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-95dp"
        android:background="@layout/shape"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="Autogenerated"
        android:inputType="date"
        android:drawableLeft="@drawable/date"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />


    <EditText
        android:id="@+id/e2"
        android:layout_width="370dp"
        android:layout_height="56dp"
android:drawableLeft="@drawable/email"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="54dp"
        android:background="@layout/shape"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="Client's Email ID"
        android:inputType="textEmailAddress"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/e3"
        android:layout_width="370dp"
        android:layout_height="56dp"
android:drawableLeft="@drawable/time"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="271dp"
        android:background="@layout/shape"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="    IN-Time"
        android:inputType="time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-163dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text=" Date:"
        android:textAppearance="?android:attr/textAppearanceSmall"

        android:textColor="#000000"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-271dp"

        android:fontFamily="sans-serif-smallcaps"
        android:text="Service Engineer IN-Time"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <Spinner
        android:id="@+id/s1"
        android:layout_width="370dp"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/t4"
        android:layout_marginTop="-279dp"
        android:background="@android:drawable/btn_dropdown"
        android:drawablePadding="5dp"
        android:ems="10"
        android:entries="@array/tag_arrays1"
        android:gravity="center"
        android:prompt="@string/tag_prompt1" />


    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="279dp"

        android:fontFamily="sans-serif-smallcaps"
        android:text="Select the Product:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />


    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e4"
        android:layout_alignParentStart="true"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Product Serial No."

        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#000000"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/e4"
        android:layout_width="370dp"
        android:layout_height="47dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="144dp"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:drawableLeft="@drawable/serialno"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="Product Serial No."
        android:inputType="number"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="352dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@layout/layout"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Next"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/e5"
        android:layout_width="370dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="79dp"
        android:background="@layout/shape"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:hint="If NA specify.(Optional)"
        android:inputType="text"

        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="18dp" />


</RelativeLayout>